<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/status"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        android:layout_marginStart="40dp"
        android:textSize="30sp"
        android:textColor="#70AE98"/>
    <TextView
        android:id="@+id/detect"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="Detect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status"
        android:textSize="30sp"
        android:textColor="#70AE98"/>
    <TextView
        android:id="@+id/led"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="LED"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detectTextView"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:textSize="30sp"
        android:textColor="#70AE98"/>

    <TextView
        android:id="@+id/alarm"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="ALARM"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/led"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:textSize="30sp"
        android:textColor="#70AE98"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="411dp"
        android:layout_height="177dp"
        app:srcCompat="@drawable/noti"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:onClick="noti"/>

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:textColor="#7C8C03"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/status"
        app:layout_constraintTop_toTopOf="@id/status" />

    <TextView
        android:id="@+id/ledTextView"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:textColor="#7C8C03"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/led"
        app:layout_constraintTop_toTopOf="@id/led" />

    <TextView
        android:id="@+id/alarmTextView"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:textColor="#7C8C03"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/alarm"
        app:layout_constraintTop_toTopOf="@id/alarm" />

    <TextView
        android:id="@+id/detectTextView"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:textColor="#7C8C03"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/detect"
        app:layout_constraintTop_toTopOf="@id/detect" />

</androidx.constraintlayout.widget.ConstraintLayout>