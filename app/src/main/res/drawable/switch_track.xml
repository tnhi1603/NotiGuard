<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/switchOnColor" /> <!-- Màu xanh dương khi switch được bật -->
            <corners android:radius="20dp" /> <!-- Bo tròn viền của track -->
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/switchOffColor" /> <!-- Màu xám khi switch được tắt -->
            <corners android:radius="20dp" /> <!-- Bo tròn viền của track -->
        </shape>
    </item>
</selector>
